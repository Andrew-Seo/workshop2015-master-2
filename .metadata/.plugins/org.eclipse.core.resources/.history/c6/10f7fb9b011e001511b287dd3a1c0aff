import javax.swing.JOptionPane;

public class changeCalculator {

	public static void main(String[] args) {

		// Ask the user how many nickels they have
			String nickel = JOptionPane.showInputDialog(null, "How many nickels do you have?");
		// Convert their answer to an int using Integer.parseInt()
			double Nickel = Double.parseDouble(nickel);
		// Ask the user how many dimes they have, and convert their answer
			String dime = JOptionPane.showInputDialog(null, "How many dime do you have?");
			double Dime = Double.parseDouble(dime);
		// Ask the user how many quarters they have, and convert their answer
			String quarter = JOptionPane.showInputDialog(null, "How many quarters do you have?");
			double Quarter = Double.parseDouble(quarter);
		// Calculate how much money the user has and save it in a double variable 
			double total = Nickel + Dime + Quarter;
		// Tell the user how much money they have
			JOptionPane.showMessageDialog(null, "The amount of money you have is ... " + total);

	}
}

